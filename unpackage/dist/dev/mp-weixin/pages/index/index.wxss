}
.slider{
  margin-top: 10rpx;
}
.menu_wrap{
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  margin-top: 10rpx;
}
.food_wrap{
  width: 50%;
  display: inline-block;
  padding: 10rpx;
  margin-top: 10rpx;
}
.foodCount{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
