<view><view class="container"><view class="userinfo"><block wx:if="{{!hasUserInfo&&canIUse}}"><button open-type="getUserInfo" data-event-opts="{{[['tap',[['getUserInfo']]]]}}" bindtap="__e">微信登陆</button></block><block wx:else><block><image class="userinfo-avatar" bindtap="bindViewTap" src="{{userInfo.avatarUrl}}" mode="cover"></image><text class="userinfo-nickname">{{"用户名："+userInfo.nickName}}</text></block></block></view><view class="userInfo_wrap"><view class="address">我的地址:<input disabled="{{modifyDataAble}}" data-event-opts="{{[['input',[['__set_model',['','userAddress','$event',[]]]]]]}}" value="{{userAddress}}" bindinput="__e"/></view><view>我的电话:<input maxlength="11" disabled="{{modifyDataAble}}" data-event-opts="{{[['input',[['__set_model',['','userPhone','$event',[]]]]]]}}" value="{{userPhone}}" bindinput="__e"/></view></view></view><block wx:if="{{modifyDataButText=='确定'}}"><button data-event-opts="{{[['tap',[['getLocation']]]]}}" bindtap="__e">定位</button></block><button style="margin-top:20rpx;" data-item="{{userAddress}}" data-event-opts="{{[['tap',[['modifyData']]]]}}" bindtap="__e">{{''+modifyDataButText+''}}</button></view>